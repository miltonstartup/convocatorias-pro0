# Frontend Environment Variables
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Optional: OpenRouter API Key for frontend (if needed)
VITE_OPENROUTER_API_KEY=your_openrouter_api_key

# Supabase Edge Functions Environment Variables
# (Configure these in Supabase Dashboard > Settings > Edge Functions)

# Required for AI functionality
OPENROUTER_API_KEY=your_openrouter_api_key
GOOGLE_API_KEY=your_google_gemini_api_key

# Required for email alerts
RESEND_API_KEY=your_resend_api_key

# Required for MercadoPago integration
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token

# Required for PWA notifications
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_EMAIL=your_contact_email

# Application URLs
FRONTEND_URL=https://your-app-domain.com

# Supabase Configuration (automatically available in Edge Functions)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key