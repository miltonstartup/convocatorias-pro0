# ConvocatoriasPro - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# =============================================================================

# Supabase Configuration (Required)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Application Configuration
VITE_APP_URL=http://localhost:5173
VITE_APP_NAME=ConvocatoriasPro
VITE_APP_VERSION=1.0.0

# Development Configuration
NODE_ENV=development
VITE_DEV_MODE=true

# =============================================================================
# BACKEND ENVIRONMENT VARIABLES (Supabase Edge Functions)
# Configure these in Supabase Dashboard > Settings > Edge Functions
# =============================================================================

# Supabase Internal (Auto-configured)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# AI Services (Required for AI functionality)
OPENROUTER_API_KEY=your_openrouter_api_key_here
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Email Services (Required for email alerts)
RESEND_API_KEY=your_resend_api_key_here

# Push Notifications (Required for PWA notifications)
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_EMAIL=your_contact_email_here

# Payment Integration (Required for Pro plans)
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token_here

# Google Calendar Integration (Optional)
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here

# Application URLs
FRONTEND_URL=http://localhost:5173

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Feature Flags
ENABLE_SOURCE_VALIDATION=true
VALIDATION_MAX_CONCURRENT=2
VALIDATION_TIMEOUT_SECONDS=8

# Development Settings
DEBUG_MODE=false
LOG_LEVEL=info

# =============================================================================
# INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env in the root directory
# 2. Replace all "your_*_here" values with your actual credentials
# 3. For Supabase Edge Functions, configure the backend variables in:
#    Supabase Dashboard > Settings > Edge Functions > Environment Variables
# 4. Never commit .env files to version control
# 5. See docs/SETUP.md for detailed configuration instructions